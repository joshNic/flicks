<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.example.flicks.movieDetails.MovieDetailViewModel"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
            <ImageView
                    android:id="@+id/main_photo_image"
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    app:posterPath="@{viewModel.selectedProperty.posterPath}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/backgrounds/scenic" android:contentDescription="@string/todo"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:id="@+id/property_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#de000000"
                    android:text="@{viewModel.selectedProperty.originalTitle}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_photo_image"
                    tools:text="Title"/>

            <TextView
                    android:id="@+id/price_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#de000000"
                    android:text="@{`Rating: `+String.valueOf(viewModel.selectedProperty.voteAverage)}"
                    tools:text="rating"
                    app:layout_constraintStart_toEndOf="@+id/property_type_text" android:layout_marginStart="92dp"
                    app:layout_constraintTop_toBottomOf="@+id/main_photo_image" android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@{`Movie Overview\n`+viewModel.selectedProperty.overview}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/property_type_text" android:layout_marginTop="16dp"/>
            <TextView
                    android:text="@{`Release Date: `+viewModel.selectedProperty.releaseDate}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/phot_grid"
                    android:layout_height="wrap_content"
                    app:trailerData="@{viewModel.trailerResultData}"
                    tools:itemCount="16"
                    android:orientation="horizontal"
                    tools:listitem="@layout/horizontal_view_trailer_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="44dp"/>
            <TextView
                    android:text="@string/movie_trailers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/phot_grid" app:layout_constraintHorizontal_bias="0.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>